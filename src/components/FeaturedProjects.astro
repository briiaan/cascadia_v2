---
import '../styles/featured_projects.scss'
import '../styles/default.scss'
import { titles, locations, numbers, images, links } from '../utils/images';
const featured = [0, 1, 2, 3]
import { Image } from 'astro:assets';
---
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide-extension-auto-scroll@0.5.3/dist/js/splide-extension-auto-scroll.min.js" integrity="sha256-A+2opyqhvbBV8tbd9mIM8w9zvvMYHOawY03BQRtq7Kw=" crossorigin="anonymous"></script>
<script type="module">
import Splide from 'https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/+esm'
    document.addEventListener( 'DOMContentLoaded', function() {
    var splide = new Splide( '.splide', {
    perPage: 3,
    gap: 30,
    breakpoints: {
        600: {
            padding: '5%',
            perPage: 1,
            arrows: false,
            width: '100%',
            height: '25rem',
        },
        900: { 
            padding: '4%',
            perPage: 1.5,
            width: '100%',
            arrows: false,
        },
        1100: { 
            padding: '3%',
            perPage: 2,
            width: '100%',
        },
        1300: { 
            perPage: 3,
            width: '100%',
        }
    },
    padding: '5%',
    type: 'loop',
    height: '25rem',
    width: '100%',
    interval: 2000,
    pauseOnFocus: true,
    pagination: false,
    drag: true,
    arrows: false,
    
} );
    splide.mount(window.splide.Extensions);
  } );
  </script>
  <div>
    <div id='featured-projects-header-flex-container-div'>
    <div id="featured-projects-header-flex">
        <div><p id="featured-projects-title">FEATURED PROJECTS</p></div>
            <a href="/projects"><div id="view-container"><div id="featured-projects-view-more">VIEW MORE
